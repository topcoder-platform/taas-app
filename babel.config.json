{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-react"
  ],
  "plugins": [
    [
      "@babel/plugin-transform-runtime",
      {
        "useESModules": true,
        "regenerator": false
      }
    ],
    [
      "react-css-modules",
      {
        "filetypes": {
          ".scss": {
            "syntax": "postcss-scss"
          }
        },
        "generateScopedName": "teams_[path][name]___[local]___[hash:base64:6]"
      }
    ],
    "inline-react-svg"
  ],
  "env": {
    "test": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": "current node"
          }
        ]
      ],
      "plugins": [
        ["module-resolver", {
          "alias": {
            "styles": "./src/styles",
            "components": "./src/components",
            "hooks": "./src/hooks",
            "utils": "./src/utils",
            "constants": "./src/constants",
            "services": "./src/services"
          }
        }]
      ]
    }
  }
}
